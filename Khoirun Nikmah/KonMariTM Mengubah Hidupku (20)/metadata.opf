        <dc:title>KonMari™ Mengubah Hidupku</dc:title>
        <dc:creator opf:file-as="Nikmah, Khoirun" opf:role="aut">Khoirun Nikmah</dc:creator>
        <dc:contributor opf:file-as="calibre" opf:role="bkp">calibre (3.47.0) [https://calibre-ebook.com]</dc:contributor>
